{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "~/assets/*": ["./src/assets/*"],
      "~/navigation/*": ["./src/navigation/*"],
      "~/screens/*": ["./src/screens/*"],
      "~/theme/*": ["./src/theme/*"],
      "~/test-utils/*": ["./src/test-utils/*"],
      "~/types/*": ["./src/types/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
